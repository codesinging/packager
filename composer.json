{
    "name": "codesinging/packager",
    "description": "A composer package to build package",
    "license": "MIT",
    "authors": [
        {
            "name": "codesinging",
            "email": "codesinging@gmail.com"
        }
    ],
    "require": {
        "php": ">7.1",
        "symfony/console": "^4.4",
        "symfony/filesystem": "^4.4",
        "ext-json": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.5"
    },
    "autoload": {
        "psr-4": {
            "CodeSinging\\Packager\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CodeSinging\\Packager\\Tests\\": "tests"
        }
    },
    "bin": [
        "bin/packager"
    ]
}
